{
  "compilerOptions": {
    "target": "ES6",         
    "module": "commonjs",        
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,     
    "strict": true,      
    "skipLibCheck": true         
  },
  "include": [
    "src/**/*",
    "src/types/**/*.ts"
  ]
}